<?xml version="1.0" encoding="UTF-8"?> 
<Configuration> 
	<Properties>
		<!-- <Property name="fileLogPath">C:\\Users\\admin\\git-my-default\\WebDefault\\logs</Property> -->
		<!-- <Property name="fileLogPath">/home/altimedia/app/logs</Property> -->
		<Property name="fileLogPath">/home/jekins/logs</Property>
		
		<Property name="fileLogName">jenkins-test</Property>
		<Property name="fileLogPattern">
			%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5.5p | %l - %m%n
		</Property>
	</Properties>	
	
	<!-- Appender, Layout --> 
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${fileLogPattern}"/> 
        </Console>
		<RollingFile name="fileLog"
					 fileName="${fileLogPath}/${fileLogName}.log"
					 filePattern="${fileLogPath}/$${date:yyyyMM}/${fileLogName}_%d{yyyy-MM-dd}_%i.log" >
			<PatternLayout pattern="${fileLogPattern}"/> 
			<Policies>
				<TimeBasedTriggeringPolicy />				 
				<SizeBasedTriggeringPolicy size="500MB" />
			</Policies>
		</RollingFile>
		
    </Appenders>

    <!-- Logger --> 
    <Loggers> 	    
        <Root level="info">
        	<AppenderRef ref="console" />
            <AppenderRef ref="fileLog" />
        </Root>
    </Loggers>
</Configuration>
